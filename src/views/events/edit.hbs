<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card">
        <div class="card-body">
          <form action="/events/edit/{{event.id}}" method="POST">
            <div class="form-group">
              <input
                type="text"
                value="{{event.name_event}}"
                name="name"
                class="form-control"
                placeholder="Event's name"
                autofocus
              />
            </div>
            <div class="form-group">
              <input 
                type="date"
                value="{{formatDate event.dateStart}}"
                name="date"
                class="form-control"
                placeholder="Date"
                autofocus
              >
            </div>
            <div class="form-group">
              <input
                type="text"
                value="{{event.place_details}}"
                name="description"
                class="form-control"
                placeholder="Place description"
              />
            </div>
            <div class="form-group">
              <button class="btn btn-success btn-block">
                Save
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>